<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GenearteImgaesActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Generate Fake Celebrety Image"
        android:textAlignment="center"
        android:textColor="@color/black"

        android:textSize="30dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/middleview"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/generate_fake_images_btn"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/middleview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:backgroundTint="@color/viloet_app"
        android:text="GENERATE FAKE IMAGES"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/image_generated_fake"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/gen_image" />
</RelativeLayout>